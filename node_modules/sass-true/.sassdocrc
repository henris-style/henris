theme: 'herman'
dest: docs/
src: sass/

herman:
  sass:
    includepaths: ['sass']
    includes: ['true']
  extraDocs:
    - name: 'Changelog'
      path: CHANGELOG.md
    - name: 'Contributing'
      path: CONTRIBUTING.md
    - name: 'BSD3 License'
      path: LICENSE.txt

groups:
  Public API:
    api-test: 'Describing Tests'
    api-assert-values: 'Comparing Values'
    api-assert-output: 'Comparing Output'
    api-xreport: 'Reporting Results'
  Internal Helpers [Private]:
    private-utils: 'Utilities'
    private-context: 'Data Management'
    private-test: 'Tests'
    private-assert: 'Assertions'
    private-message: 'Reporting'
